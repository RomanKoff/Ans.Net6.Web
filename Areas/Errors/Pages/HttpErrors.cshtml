@page
@model Ans.Net6.Web.Areas.Errors.Pages.HttpErrorsModel
@{
	switch (Model.ViewModel.HttpCode)
	{
		case 403:
			ViewData["PageTitle"] = $"Доступ запрещен!";
			Html.RenderPartial("_Http403", Model.ViewModel, ViewData);
			break;
		case 404:
			ViewData["PageTitle"] = $"Страница не найдена!";
			Html.RenderPartial("_Http404", Model.ViewModel, ViewData);
			break;
		default:
			ViewData["PageTitle"] = $"Ошибка {Model.ViewModel.HttpCode}!";
			Html.RenderPartial("_HttpOther", Model.ViewModel, ViewData);
			break;
	}
}
